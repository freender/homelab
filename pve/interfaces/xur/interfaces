auto lo
iface lo inet loopback

# Load additional interface configs
source /etc/network/interfaces.d/*

# Physical interfaces â€” no IP
auto nic1
iface nic1 inet manual

auto nic0
iface nic0 inet manual

# Bond interface
auto bond0
iface bond0 inet static
    address 10.0.40.80/24
    gateway 10.0.40.1
    bond-slaves nic0 nic1
    bond-mode active-backup
    bond-primary nic0
    bond-miimon 100

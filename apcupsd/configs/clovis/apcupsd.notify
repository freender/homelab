#!/bin/sh
# ace/clovis slave notify - only alert on NIS communication issues
read MESSAGE
case "${MESSAGE}" in
  *Communications*lost*)
    # Alert on NIS connection lost (could indicate bray down)
    /etc/apcupsd/telegram/telegram.sh -s "UPS Alert" -d "${MESSAGE}"
    ;;
  *)
    # Suppress all other alerts (master will handle UPS events)
    exit 0
    ;;
esac
